<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.groomify.hollavirun.EditProfileActivity">

    <TextView
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/cancel_text_view"
        android:textSize="17sp"
        android:textColor="@color/primaryTextColour" />

    <TextView
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cancel_text_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/save_text_view"
        android:textColor="@color/rustyRed"
        android:textSize="17sp" />

    <TextView
        android:text="Edit Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_text_view"
        android:textColor="@android:color/black"
        android:textSize="17sp" />


    <ImageView
        android:id="@+id/profile_picture_image_view"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/profile_picture_image_view"
        android:layout_centerHorizontal="true"
        android:id="@+id/full_name_field"
        android:layout_marginTop="30dp"
        android:textSize="12sp"
        android:hint="Full Name"
        android:background="@drawable/drawable_edit_text_bg" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dob_field"
        android:layout_below="@+id/full_name_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Date of Birth"
        android:textSize="12sp"
        android:background="@drawable/drawable_edit_text_bg"
        android:cursorVisible="true"
        android:visibility="gone" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_below="@+id/dob_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/country_spinner"
        android:layout_marginTop="10dp"
        android:contextClickable="false"
        android:layout_height="35dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/phone_number_field"
        android:layout_centerHorizontal="true"
        android:id="@+id/email_field"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:background="@drawable/drawable_edit_text_bg" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone_number_field"
        android:hint="Phone number"
        android:textSize="12sp"
        android:layout_below="@+id/country_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/drawable_edit_text_bg"
        android:layout_marginTop="10dp" />


</RelativeLayout>
