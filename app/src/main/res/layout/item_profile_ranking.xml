<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:background="@drawable/profile_list_item_background">

        <com.groomify.hollavirun.view.ProfilePictureView
            android:id="@+id/user_profile_picture"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_margin="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User name"
            android:id="@+id/user_profile_name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/user_profile_picture"
            android:layout_toEndOf="@+id/user_profile_picture"
            android:textColor="@android:color/white"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rank 1"
            android:id="@+id/user_profile_ranking"
            android:textColor="@color/hollaviFontLightBlue"
            android:layout_below="@+id/user_profile_name"
            android:layout_alignLeft="@+id/user_profile_name"
            android:layout_alignStart="@+id/user_profile_name" />

        <ImageView
            android:layout_width="16sp"
            android:layout_height="16sp"
            android:id="@+id/imageView2"
            android:background="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15sp" />


    </RelativeLayout>
</LinearLayout>