<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coupon_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groomify.hollavirun.CouponDetailsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:navigationIcon="@drawable/ic_chevron_left" />

    <ImageView
        android:id="@+id/coupon_header_image_view"
        android:layout_width="wrap_content"
        android:layout_height="106dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:minWidth="106dp" />

    <TextView
        android:id="@+id/coupon_detail_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_header_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="FREE MILO DRINK FOR GROOMIFY RUNNERS"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/coupon_details_expiration_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_detail_desc_text_view"
        android:layout_centerHorizontal="true"
        android:text="Expires in 3:00:00"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/label_brough_you_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sponsor_brand_image_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="This coupon is brought to you by:"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sponsor_brand_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/label_scan_qr_to_redeem"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/race_logo" />


    <Button
        android:id="@+id/scan_qr_button"
        style="@style/OnboardingFooterBar"
        android:layout_width="201dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/groomify_button_state"
        android:text="@string/coupon_detail_scan_qr_btn" />

    <TextView
        android:id="@+id/label_scan_qr_to_redeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/scan_qr_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:text="Scan the QR code at the redemption counter to redeem this."
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/coupon_detail_desc_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_detail_title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp" />
</RelativeLayout>
