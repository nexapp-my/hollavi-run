<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_race"
    android:layout_width="match_parent"
    android:layout_height="400dp">


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="332dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white"
        android:id="@+id/while_bg_panel">

        <TextView
            android:text="7 KM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distance_text_view"
            android:layout_marginTop="236dp"
            android:layout_marginLeft="25dp"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal|bold" />


        <TextView
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_mission_text_view"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal|bold"
            android:layout_alignBaseline="@+id/distance_text_view"
            android:layout_alignBottom="@+id/distance_text_view"
            android:layout_centerHorizontal="true" />

      <!--  <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/ic_finisher_badge"
            android:id="@+id/finisher_badge_image_view"
            android:layout_marginTop="225dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />-->

        <TextView
            android:text="DISTANCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distance_label_text_view"
            android:textColor="@color/primaryTextColour"
            android:textSize="12sp"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="17dp" />


        <TextView
            android:text="MISSIONS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_mission_label_text_view"
            android:textColor="@color/primaryTextColour"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/distance_label_text_view"
            android:layout_alignBottom="@+id/distance_label_text_view"
            android:layout_centerHorizontal="true" />


        <TextView
            android:text="04/15/17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_text_view"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="normal|bold"
            android:layout_alignBaseline="@+id/total_mission_text_view"
            android:layout_alignBottom="@+id/total_mission_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp" />

        <TextView
            android:text="DATE"
            android:layout_height="wrap_content"
            android:id="@+id/date_label_text_view"
            android:textColor="@color/primaryTextColour"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="265dp"
            android:layout_marginRight="30dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="183dp"
        android:layout_height="183dp"
        app:srcCompat="@drawable/ic_map_mini"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/mini_map_image_view"
        android:layout_marginTop="25dp" />

    <TextView
        android:text="GROOMIFY RUN 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/race_title_text_view"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="218dp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Putrajaya Sentral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/race_location_text_view"
        android:layout_marginTop="244dp"
        android:textColor="@color/primaryTextColour"
        android:textSize="12sp" />


    <View
        android:layout_height="0.5dp"
        android:background="@color/primaryTextColour"
        android:layout_weight="0"
        android:layout_marginTop="268dp"
        android:layout_width="260dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
