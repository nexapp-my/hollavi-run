<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/hollaviBlue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Accident reported at section 13"
            android:id="@+id/feeds_header"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4 mins ago"
            android:id="@+id/feeds_timestamp"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/feeds_header"
            android:layout_alignStart="@+id/feeds_header"
            android:textColor="@color/hollaviFontBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Get the latest news on the run right here."
            android:id="@+id/feeds_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/feeds_timestamp"
            android:layout_alignStart="@+id/feeds_timestamp"
            android:layout_marginBottom="15sp"
            android:textColor="@color/hollaviFontLightBlue" />
    </RelativeLayout>
</LinearLayout>